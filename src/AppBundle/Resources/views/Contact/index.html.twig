{% extends "::base.html.twig" %}

{% block title %}Contact Page{% endblock %}

{% block body %}
	<h1>Contact Page</h1>
	<form id="form" pjax-container method="POST" action="/contact/send">
		<div class="form-group"><label for="name"></label><input placeholder="Name" name="name" class="form-control" type="text"></div>
		<div class="form-group"><label for="email"></label><input placeholder="Email" name="email" class="form-control" type="text"></div>
		<div class="form-group"><label for="message"></label><textarea placeholder="Message" name="message" class="form-control"></textarea></div>
		<button id="submit_btn" class="btn btn-default">Save</button>
	</form>

	<script>
		document.addEventListener("DOMContentLoaded", function() { 
			$(document).on('submit', 'form[pjax-container]', function(event) {
			  $.pjax.submit(event, '#pjax-container')
			});
		});
	</script>

{% endblock %}
